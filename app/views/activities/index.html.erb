<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Initial time</th>
      <th>Final time</th>
      <th>Description</th>
      <th>Requirements</th>
      <th>User</th>
      <th>Civicoin give</th>
      <th>Cost</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.initial_time %></td>
        <td><%= activity.final_time %></td>
        <td><%= activity.description %></td>
        <td><%= activity.requirements %></td>
        <td><%= activity.user_id %></td>
        <td><%= activity.civicoin_give %></td>
        <td><%= activity.cost %></td>
        <td><%= activity.value %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

